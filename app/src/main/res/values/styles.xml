<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MovieRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_tab_unselected</item>
        <item name="colorControlActivated">@color/color_star_active</item>
    </style>


    <style name="LightGrayRegularTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/firasansregular</item>
        <item name="android:textColor">@color/color_text_gray_ligth</item>
    </style>

    <style name="DarkGrayBoldTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/firasansbold</item>
        <item name="android:textColor">@color/color_text_gray</item>
    </style>

    <style name="DarkGrayRegularTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/firasansregular</item>
        <item name="android:textColor">@color/color_text_gray</item>
    </style>

    <style name="WhiteBoldTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/firasansbold</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
</resources>
